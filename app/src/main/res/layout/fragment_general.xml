<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".adminfrags.GeneralFrag">

    <RelativeLayout
        android:id="@+id/general_profile_container"
        android:layout_width="match_parent"
        android:layout_height="198dp"
        android:layout_margin="16dp"
        android:background="@drawable/custom_button_profile">

        <ImageView
            android:id="@+id/general_profile_sign_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_signout"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"/>

        <ImageView
            android:id="@+id/general_profile_image"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_centerVertical="true"
            android:padding="16dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:id="@+id/general_profile_details_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/general_profile_image"
            android:layout_toRightOf="@+id/general_profile_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/general_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textColor="#000000"
                android:textStyle="bold"
                tools:text="Richard Branson" />

        </LinearLayout>

        <Spinner
            android:id="@+id/general_profile_businesses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="16dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/general_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            app:fabSize="mini"
            android:visibility="gone"
            android:src="@drawable/ic_add_circle"/>

        <Switch
            android:id="@+id/general_add_business"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:textOn="Close"
            android:textOff="Add" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/general_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"/>

</LinearLayout>