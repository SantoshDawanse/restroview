<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/card_gradient"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/dashboard_ll_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="16dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/dashboard_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="48sp"
            android:textStyle="bold"
            tools:text="15:15"/>

        <TextView
            android:id="@+id/dashboard_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="48sp"
            android:textStyle="bold"
            android:textColorHighlight="@color/colorAccent"
            android:textColor="#ffffff"
            tools:text="22 Feb, 2018"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/dashboard_company_logo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:padding="16dp"
        android:src="@drawable/icon_love"/>

    <TextView
        android:id="@+id/dashboard_title_above_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:textSize="28sp"
        android:text="Please Rate your \n Experience"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:layout_above="@+id/dashboard_footer_container">



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_feedback"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/dashboard_food_quality_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:text="Food Quality"
                android:textSize="28sp"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/dashboard_food_love"
                android:layout_width="256dp"
                android:layout_height="256dp"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:layout_below="@+id/dashboard_food_quality_tv"
                android:src="@drawable/ic_love"/>

            <ImageView
                android:id="@+id/dashboard_food_sad"
                android:layout_width="256dp"
                android:layout_height="256dp"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:layout_below="@+id/dashboard_food_quality_tv"
                android:layout_toEndOf="@+id/dashboard_food_love"
                android:layout_toRightOf="@+id/dashboard_food_love"
                android:src="@drawable/ic_sad"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_button_feedback">

            <TextView
                android:id="@+id/dashboard_service_quality_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:text="Service Quality"
                android:textSize="28sp" />

            <ImageView
                android:id="@+id/dashboard_service_love"
                android:layout_width="256dp"
                android:layout_height="256dp"
                android:layout_below="@+id/dashboard_service_quality_tv"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:src="@drawable/ic_love" />

            <ImageView
                android:id="@+id/dashboard_service_sad"
                android:layout_width="256dp"
                android:layout_height="256dp"
                android:layout_below="@+id/dashboard_service_quality_tv"
                android:layout_margin="8dp"
                android:layout_toEndOf="@+id/dashboard_service_love"
                android:layout_toRightOf="@+id/dashboard_service_love"
                android:padding="8dp"
                android:src="@drawable/ic_sad" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dashboard_footer_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dashboard_footer_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Powered By: "
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/dashboard_footer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PI"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"/>

    </LinearLayout>




</RelativeLayout>